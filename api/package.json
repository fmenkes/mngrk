{
  "name": "mngrka-api",
  "version": "0.1.0",
  "description": "Koa API for mngrka boilerplate",
  "main": "index.ts",
  "scripts": {
    "test": "jest",
    "build": "webpack",
    "start": "node dist/bundle.js",
    "dev": "nodemon --watch 'src/**/*' -e ts,tsx,graphql --exec ts-node ./src/index.ts",
    "codecov": "codecov"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fmenkes/mngrka.git"
  },
  "author": "fmenkes",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fmenkes/mngrka/issues"
  },
  "homepage": "https://github.com/fmenkes/mngrka#readme",
  "dependencies": {
    "@koa/cors": "^3.0.0",
    "config": "^3.2.2",
    "dotenv": "8.1.0",
    "js-yaml": "^3.13.1",
    "koa": "^2.7.0",
    "koa-bodyparser": "^4.2.1",
    "koa-compose": "^4.1.0",
    "koa-router": "^7.4.0",
    "mongoose": "^5.7.9"
  },
  "devDependencies": {
    "@types/config": "0.0.34",
    "@types/jest": "^24.0.17",
    "@types/koa": "^2.0.49",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-compose": "^3.2.4",
    "@types/koa-router": "^7.0.42",
    "@types/koa__cors": "^2.2.3",
    "@types/mongoose": "^5.5.12",
    "@types/supertest": "^2.0.8",
    "clean-webpack-plugin": "^3.0.0",
    "codecov": "^3.5.0",
    "jest": "^24.9.0",
    "nodemon": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.4",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3",
    "webpack": "^4.39.3",
    "webpack-cli": "^3.3.6",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.ts"
    ],
    "collectCoverageFrom": [
      "**/*.ts",
      "!**/node_modules/**"
    ]
  }
}
